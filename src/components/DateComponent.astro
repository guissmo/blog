---
import classNames from "classnames";
import style from "../styles/global.module.css";

const {entryData} = Astro.props;

export function dateString(data: any) {
  if (data.year_s === undefined) {
    if(data.year == undefined) return '';
    if(data.month == undefined) return data.year;
    const yearString = String(data.year).padStart(4, "0");
    const monthString = String(data.month).padStart(2, "0");
    return `${yearString}.${monthString}`;
  }
  if (data.year_s == data.year_e) return data.year_s;
  if (data.year_e === undefined) return `${data.year_s} -`;
  return `${data.year_s} - ${data.year_e}`;
}

