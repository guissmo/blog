---
import type { Heading, HierarchicalHeading } from "./TableOfContents.astro";

const { headings } = Astro.props;
---

{
  (
    <ul>
      {headings.map((heading: HierarchicalHeading) => (
        <li>
          <a href={`#${heading.slug}`}>{heading.text}</a>
          {heading.children.length > 0 && (
            <Astro.self headings={heading.children} />
          )}
        </li>
      ))}
    </ul>
  )
}

<style>
  ul {
    text-align: left;
    list-style-type: none;
    padding-left: 0;
    padding-top: 0;
    margin-top: 0;
    line-height: 1.3;
  }

  ul ul {
    padding-left: 1rem;
  }

  li {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  span {
    font-weight: 500;
    color: #1c425e;
  }

  .no-select {
    user-select: none;
  }
</style>
