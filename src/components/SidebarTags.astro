---
import SidebarHeader from "./SidebarHeader.astro";
const { frontmatter } = Astro.props;
---

<SidebarHeader>Tags</SidebarHeader>
<ul>
  {
    frontmatter.tags &&
      frontmatter.tags.length > 0 &&
      frontmatter.tags.map((tag: string) => {
        return (
          <li>
            <a href={`/blog/tags/${tag.toLowerCase().replaceAll(" ", "-")}`}>
              #{tag}
            </a>
          </li>
        );
      })
  }
</ul>

<style>
  ul {
    text-align: left;
    list-style-type: none;
    padding-left: 0;
    padding-top: 0;
    margin-top: 0;
    line-height: 1;
  }

  li {
    display: inline-block;
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
    margin-right: 1rem;
    text-wrap: nowrap;
  }

  ul ul {
    padding-left: 1rem;
  }
</style>
