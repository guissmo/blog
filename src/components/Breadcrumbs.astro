---
const { data } = Astro.props;
---

<ul>
  <li>
    {
      data.child ? (
        <a href={data.href}>{data.title}</a>
      ) : (
        <span>{data.title}</span>
      )
    }
    {data.child && <Astro.self data={data.child} />}
  </li>
</ul>

