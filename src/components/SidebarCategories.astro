---
import {
  getPopularTagsFromPosts,
  allBlogPostsUnsorted,
  getPopularCategoriesFromPosts,
} from "../pages/blog/blog";
import SidebarHeader from "./SidebarHeader.astro";
import shuffle from "lodash";
const popularCategories = getPopularCategoriesFromPosts(allBlogPostsUnsorted);
---

<SidebarHeader>Categories</SidebarHeader>
<ul>
  {
    popularCategories.map((entry) => (
      <li>
        <a
          href={`/blog/category/${entry.category.toLowerCase().replaceAll(" ", "-")}`}
        >
          {entry.category} ({entry.count})
        </a>{" "}
      </li>
    ))
  }
</ul>

<style>
  ul {
    text-align: left;
    list-style-type: none;
    padding-left: 0;
    padding-top: 0;
    margin-top: 0;
    line-height: 1;
  }

  li {
    display: block;
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
    margin-right: 1rem;
    text-wrap: nowrap;
  }

  ul ul {
    padding-left: 1rem;
  }
</style>
