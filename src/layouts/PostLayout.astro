---
import "@fontsource-variable/source-code-pro";
import "@fontsource-variable/fredoka";
import "@fontsource/rubik-mono-one";
import Header from "../components/Header";
import Footer from "../components/Footer";
// 1. The frontmatter prop gives access to frontmatter and other data
const { frontmatter } = Astro.props;
---

<html>
  <head>
    <title>{frontmatter.title} | Jared Asuncion</title>
    <!-- Add other Head elements here, like styles and meta tags. -->
    <meta charset="utf-8" />
    <meta name="title" content={`${frontmatter.title} | Jared Asuncion`} />
    <meta
      name="description"
      content={`${frontmatter.description} | Jared Asuncion`}
    />
    <meta name="author" content="Jared Asuncion" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      type="text/css"
      href=`${import.meta.env.BASE_URL}/style.css`
    />
    <link rel="sitemap" href=`${import.meta.env.BASE_URL}/sitemap-index.xml` />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css"
      integrity="sha384-MlJdn/WNKDGXveldHDdyRP1R4CTHr3FeuDNfhsLPYrq2t0UBkUdK2jyTnXPEK1NQ"
      crossorigin="anonymous"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/blog/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/blog/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/blog/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="/blog/favicon/site.webmanifest" />
    <title>{frontmatter.title}</title>
  </head>
  <body>
    <main>
      <Header />
      <div class="breadcrumbs">
        <a href={`${import.meta.env.BASE_URL}/`}>Home</a>
        <span class="raquo">&raquo;</span>
        <a href={`${import.meta.env.BASE_URL}/blog`}>Blog</a>
        <span class="raquo">&raquo;</span>
        <a href="#">{frontmatter.title}</a>
      </div>
      <!-- Add other UI components here, like common headers and footers. -->
      <h1>{frontmatter.title}</h1>
      <!-- 2. Rendered HTML will be passed into the default slot. -->
      <span class="content">
        <slot />
      </span>
      <Footer />
    </main>
  </body>
</html>

<style is:global>
  body {
    font-family: "Fredoka Variable", sans-serif;
    font-weight: 400;
  }

  h1:not(#logo) {
    font-weight: 800;
    padding-top: 2ex;
  }

  .content {
    padding-top: 3ex;
  }

  p code,
  li code {
    font-family: "Source Code Pro Variable", sans-serif;
    font-weight: 800;
    border: 1px solid darkgray;
    border-radius: 5px;
    padding-left: 0.3em;
    padding-right: 0.3em;
  }
</style>
