import "@fontsource-variable/source-code-pro";
import "@fontsource/fira-sans/100.css";
import "@fontsource/fira-sans/200.css";
import "@fontsource/fira-sans/300.css";
import "@fontsource/fira-sans/400.css";
import "@fontsource/fira-sans/500.css";
import "@fontsource/fira-sans/600.css";
import "@fontsource/fira-sans/700.css";
import "@fontsource/fira-sans/800.css";
import "@fontsource/fira-sans/900.css";
import "@fontsource/rubik-mono-one";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import PageHeader from "../components/PageHeader.astro";
import SidebarFooter from "../components/SidebarFooter.astro";
import SidebarTags from "../components/SidebarTags.astro";
import TableOfContents from "../components/TableOfContents.astro";
import PageLayout from "./PageLayout.astro";
const { frontmatter, headings } = Astro.props;
const breadcrumbData = {
  title: "Blog",
  href: `${import.meta.env.BASE_URL}/blog`,
  child: {
    title: frontmatter.category,
    href: `${import.meta.env.BASE_URL}/blog/category/${frontmatter.category.toLowerCase().replaceAll(" ", "-")}`,
    child: {
      title: frontmatter.title,
      href: `${import.meta.env.BASE_URL}/blog/${frontmatter.slug}`,
    },
  },
};
---

<PageLayout frontmatter={frontmatter}>
  <span slot="sidebar">
    <Breadcrumbs data={breadcrumbData} />
    <TableOfContents headings={headings} />
    <SidebarTags frontmatter={frontmatter} />
    <SidebarFooter />
  </span>
  <div class="post-content">
    <PageHeader text={frontmatter.title} />
    <slot />
  </div>
</PageLayout>

<style>
  .post-title {
    line-height: 1.3;
    font-size: 2.5em;
    font-weight: 700;
    margin-bottom: 0.5em;
    font-variant-caps: small-caps;
    border-bottom: 2px solid black;
  }

  .post-content {
    width: 100%;
  }

  @media (min-width: 800px) {
    .post-content {
      width: 100%;
    }
  }

  @media (max-width: 799px) {
    .post-content {
      width: 100%;
    }
  }
</style>
