<script>
let navVisible = true;

function toggleNavVisibility() {
  navVisible = !navVisible;
  let nav = document.querySelector(".sticky-toc");
  if (nav){
    nav.classList.toggle("hidden", !navVisible);
  }
  const navToggle = document.querySelector('.nav-toggle');
  if(navToggle){
    if (navVisible) {
      navToggle.textContent = '×';
    } else {
      navToggle.textContent = '≡';
    }
  }
}

  document.addEventListener('DOMContentLoaded', () => {
    const navToggle = document.querySelector('.nav-toggle');
    navToggle?.addEventListener('click', toggleNavVisibility);
  });
  toggleNavVisibility();
</script>
<BaseLayout frontmatter={frontmatter}>
    <main>
      <div class="header">
        <Header />
      </div>
      <div class="nav-toggle">
        ≡
      </div>
      <span class="content">
        <div class="sticky-toc">
        <Header />
          <ul>
            <li><a href={`${import.meta.env.BASE_URL}/blog`}>Blog</a></li>
            <ul>
              <li>
                <a href={`${import.meta.env.BASE_URL}/blog/category/${frontmatter.category.toLowerCase().replaceAll(" ","-")}`}>{frontmatter.category}</a>
                <ul>
                  <li><a href="#">{frontmatter.title}</a></li>
                </ul>
              </li>
            </ul>
          </ul>
        <TableOfContents headings={headings} />
        </div>
        <div class="post-content">
        <slot />
        </div>
      </span>
    </main>
</BaseLayout>

